{
    "name": "csv2xbrl",
    "version": "0.3.5",
    "description": "A script to conver xBRL-CSV files to xBRL-XML files",
    "files": [
        "dist",
        "package.json",
        "README.md"
    ],
    "export": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsup src/index.ts --dts --minify",
        "start": "ts-node src/index.ts",
        "test": "jest",
        "profile": "node -r ts-node/register --prof src/index.ts",
        "taxpackages": "cd testdata && zip -r sample-taxonomy.zip sample-taxonomy/ && zip -r xbrl-org.zip xbrl-org && zip -r eurofiling.zip eurofiling",
        "samples": "csv2xbrl -z testdata/sample-taxonomy.zip,testdata/xbrl-org.zip testdata/xbrl-csv-tutorial/*.json"
    },
    "bin": {
        "csv2xbrl": "dist/index.js"
    },
    "keywords": [
        "xBRL",
        "CSV",
        "xBRL-CSV",
        "xBRL-XML",
        "conversion"
    ],
    "author": "VÃ­ctor Morilla",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/luxon": "^3.4.2",
        "@types/node": "^20.11.30",
        "@types/xmldom": "^0.1.34",
        "@types/yargs": "^17.0.32",
        "@types/yauzl": "^2.10.3",
        "@typescript-eslint/eslint-plugin": "^7.8.0",
        "@typescript-eslint/parser": "^7.8.0",
        "eslint": "^8.57.0",
        "eslint-plugin-only-warn": "^1.1.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tsup": "^8.0.2",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "axios": "^1.6.8",
        "csv-parser": "^3.0.0",
        "luxon": "^3.4.4",
        "strip-bom-stream": "^5.0.0",
        "xmldom": "^0.6.0",
        "xpath": "^0.0.34",
        "yargs": "^17.7.2",
        "yauzl": "^3.1.2"
    }
}
